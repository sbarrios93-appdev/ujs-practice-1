<div class="row">
  <div class="col-md-4">
    <h2 class="h6 text-center">Not yet started</h2>

    <ul class="list-group">
      <%= render current_user.tasks.not_yet_started.order(created_at: :asc) %>
    </ul>
  </div>

  <div class="col-md-4">
    <h2 class="h6 text-center">In progress</h2>

    <ul class="list-group">
      <%= render current_user.tasks.in_progress.order(updated_at: :desc) %>
    </ul>
  </div>

  <div class="col-md-4">
    <h2 class="h6 text-center">Completed</h2>

    <ul class="list-group">
      <%= render current_user.tasks.completed.order(updated_at: :desc) %>
    </ul>
  </div>
</div>
